<div class="container text-white">
	<div class="row justify-content-center">
		<div class="col-10">
			<%=render 'shared/errors',obj: @article%>
			<%=form_with model: @article,class: "shadow p-3 mb-3 bg-dark rounded", local: true do |f|%>
			<div class="col-2">
				<%=f.label :title%>
			</div>
				<div class="form-group">
					
					<%=f.text_field :title,class: "form-control"%>
				</div>
				<div class="form-group">
					<%=f.label :description%>
					<%=f.text_area :description,class: "form-control text-area-height"%>
				</div>
				<div class="form-group">
					<%=f.submit class: "btn btn-light"%>		
				</div>	
			<%end%>
			<%=link_to "back", articles_path(),class: "text-dark"%>
		</div>
	</div>
</div>
