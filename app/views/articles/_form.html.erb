<div class="container">
	<%=form_with model: @article, local: true, :html => {:class => "mx-auto"} do |f|%>
		<div class="form-group">
			<%=f.label :title%>
			<%=f.text_field :title,class: "form-control"%>
		</div>
		<div class="form-group">
			<%=f.label :description%>
			<%=f.text_area :description,class: "form-control text-area-height"%>
		</div>
		<div class="form-group">
			<%=f.submit class: "btn btn-dark"%>		
		</div>	
	<%end%>
</div>
