<div class="container text-white">
	<div class="row justify-content-center">
		<div class="col-10">
			<%=render 'shared/errors',obj: @user%>
			<%=form_with model: @user, class: "shadow p-5	 mb-3 bg-dark rounded", local: true do |f|%>
				<div class="form-group row">
					<%=f.label :email, class: "col-2 col-form-label"%>
					<%=f.text_field :username,placeholder: "User Name",id: "inputemail",class: "form-control col-10", autofocus: "true"%>
				</div>
				<div class="form-group row">
					<%=f.label :email, class: "col-2 col-form-label"%>
					<%=f.email_field :email,placeholder: "email",class: "form-control col-10"%>
				</div>
				<div class="form-group row">
					<%=f.label :password, class: "col-2 col-form-label"%>
					<%=f.password_field :password,placeholder: "password",class: "form-control col-10"%>
				</div>
				<div class="form-group row justify-content-center">
					<!-- the method below, is to check if the method that call the partial is new or edit and display the right text in the submit botton-->
					<%=f.submit(@user.new_record? ? "Sign Up" : "Update Account" , class: "btn btn-lg btn-light")%>
				</div>
			<%end%>
		</div>
	</div>
</div>