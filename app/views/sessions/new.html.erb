<h1 class="mt-5 text-center">Login</h1>
<div class="possition-relative">
  <div class="container text-white">
    <div class="row justify-content-center">
      <div class="col-4">
<%=form_with scope: :session,url: login_path, class: "mt-5 possition-absolute top-50 start-50 translate-middle", local: true do |f|%>
        <div class="form-group ">
          <%=f.text_field :email, placeholder: "enter your email", autofocus: true, class:"form-control", required: true%> 
        </div>
        <div class="form-group ">
          <%=f.password_field :password, placeholder: "enter your password",class:"form-control",required: true%> 
        </div>
        <div class="form-group">
          <%=f.submit "Login", class: "w-100 btn btn-dark"%> 
        </div>
<%end%>
<%=link_to "or sign up", signup_path,class: "text-right"%>
      </div>
    </div>
  </div>
</div>
